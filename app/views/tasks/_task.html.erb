<div class="task-container">
  <div class="task">
  <% @tasks.each do |task| %>
    <li class="task-list">
      <p><b><%= link_to task.title, edit_task_path(task) %></b></p>
      <p><%= task.description %></p>
      <p><%= task.start_date %></p>
      <p><%= task.end_date %></p>
      <div class="edit-delete">
        <%= button_to '編集', edit_task_path(task), class: 'btn btn-primary' %>
        <%= button_to '削除',
                      task_path(task),
                      method: :delete,
                      data: { confirm: 'このタスクを削除します' },
                      class: 'btn btn-danger' %>
      </div>
    </li>
  <% end %>
</div>
</div>
