<header class="bg-dark py-5">
  <div class="container px-4 px-lg-5 my-5">
    <div class="text-center text-white">
      <h1 class="display-4 fw-bolder">ユーザ一詳細</h1>
      <p class="lead fw-normal text-white-50 mb-0">User Register</p>
    </div>
  </div>
</header>
<% if logged_in? && current_user.admin? %>
    <p class="fw-bolder"><%= @user.id %></p>
    <h5 class="fw-bolder"><%= @user.name %></h5>
    <p>メールアドレス:<%= @user.email %></p>
    <p>管理者権限:<%= @user.admin? ? 'あり' : 'なし' %></p>
    <div>
      <%= link_to "ユーザー編集ページへ", edit_user_path(@user) %> |
      <%= link_to "ユーザー一覧ページへ", admin_users_path %>
      <%= button_to "このユーザーを削除する", @user, method: :delete, class: "btn btn-primary" %>
    </div>
<% else %>
  <h5>管理者権限がありません</h5>
<% end %>